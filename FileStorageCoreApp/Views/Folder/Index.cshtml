@model IEnumerable<FolderResponse>
@{
    ViewBag.Title = "File List";
}


<h1>Files</h1>

<a asp-controller="Folder" asp-action="AddFolder" class="link-hover">Add Folder</a>

<table class="table">
    <thead>
        <tr>
            <th>Folder Name</th>
            <th>Virtual folder path</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var folder in Model)
        {
            <tr>
                <td>@folder.FolderName</td>
                <td>@folder.VirtualPath</td>
                <td>
                    <a asp-controller="Folder" asp-action="Delete" asp-route-folderID="@folder.Id" class="link-hover">Delete</a>
                    <a asp-controller="Folder" asp-action="UpdateFolder" asp-route-folderID="@folder.Id" class="link-hover">Update</a>
                    <a asp-controller="Folder" asp-action="MoveToFolder" asp-route-folderID="@folder.Id" class="link-hover">Move</a>
                </td>
            </tr>
        }
    </tbody>
