@model FolderAddRequest
@{
	ViewBag.Title = "Add Folder";
}

<a asp-controller="Folder" asp-action="Index" class="link-hover">Back to Folder List</a>

<div>
	<form asp-controller="Folder" asp-action="AddFolder" method="post">

		@*Folder name*@
		<div class="form-field flex">
			<div class="w-25">
				<label for="FolderName" class="form-label pt">Folder Name</label>
			</div>
			<div class="flex-1">
				<div class="flex-1">
					<input asp-for="FolderName" class="form-input" placeholder="Folder name" />
					<span asp-validation-for="FolderName" class="text-red"></span>
				</div>
			</div>
		</div>

		@*Submit*@
		<div class="form-field flex">
			<div class="w-25">
			</div>
			<div class="flex-1">
				<div class="flex-1">
					<button class="button button-green-back">Create</button>
					<div asp-validation-summary="All" class="text-red"></div>
					@if (ViewBag.Errors != null)
					{
						<div class="text-red ml">
							<ul>
								@foreach (var error in ViewBag.Errors)
								{
									<li class="ml">@error</li>
								}
							</ul>
						</div>
					}
				</div>
			</div>
		</div>

	</form>
</div>