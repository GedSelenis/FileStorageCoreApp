@model FileResponse
@{
        ViewBag.Title = "Delete File";
}

<h1>Delete File</h1>

<form asp-controller="File" asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <p>Are you sure you want to delete the file <strong>@Model.FileName</strong>?</p>
	@*FileName*@
	<div class="form-field flex">
		<div class="w-25">
			<label for="FileName" class="form-label pt">File Name</label>
		</div>
		<div class="flex-1">
			<div class="flex-1">
				<input asp-for="FileName" class="form-input" placeholder="File Name" disabled="disabled" />
				<span asp-validation-for="FileName" class="text-red"></span>
			</div>
		</div>
	</div>

	@*FilePath*@
	<div class="form-field flex">
		<div class="w-25">
			<label for="FilePath" class="form-label pt">File path</label>
		</div>
		<div class="flex-1">
			<div class="flex-1">
				<input asp-for="FilePath" class="form-input" placeholder="File path" disabled="disabled" />
				<span asp-validation-for="FilePath" class="text-red"></span>
			</div>
		</div>
	</div>

	@*Submit*@
	<div class="form-field flex">
		<div class="w-25">
		</div>
		<div class="flex-1">
			<div class="flex-1">
				<button class="button button-green-back">Delete</button>
				<div asp-validation-summary="All" class="text-red"></div>
				@if (ViewBag.Errors != null)
				{
					<div class="text-red ml">
						<ul>
							@foreach (var error in ViewBag.Errors)
							{
								<li class="ml">@error</li>
							}
						</ul>
					</div>
				}
			</div>
		</div>
	</div>
    <a asp-controller="File" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>